@model Fab.ViewModels.FooterCategoryVM
    


<div class="footer-list">
    <div class="footer-list-title">
        @if (Model.LangCode == "az")
        {
            <p>Məhsullar</p>
        }
        else if (Model.LangCode == "en")
        {
            <p>Products</p>
        }
        else
        {
            <p>Продукты</p>

        }
    </div>
    <div class="footer-list-items">
        @foreach (var category in Model.Categories)
        {
            <p>
                <a style="color:#555" asp-route-categoryid="@category.Id" asp-controller="Product" asp-action="Index">@category.Translates.FirstOrDefault().Name</a>
            </p>
        }
        
       
    </div>
</div>