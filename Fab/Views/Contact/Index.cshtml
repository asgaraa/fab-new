@model Fab.ViewModels.ContactPageVM


@{
    ViewData["Title"] = "Index";
}
<main>
    <section id="head_bg" style="background-image: url('/assets/img/insan.resurslari/bg-other.png');">
        <div class="container">
            <div class="ir-title">
                @if (Model.LangCode == "az")
                {
                    <div class="ir-title-links">
                        <a asp-controller="Home" asp-action="Index">Ana səhifə</a>
                        <img src="~/assets/img/ir.svg" alt="svg">
                        <a asp-controller="Contact" asp-action="Index">Əlaqə</a>
                    </div>
                    <div class="ir-title-text">
                        <p>Əlaqə</p>
                    </div>
                }
                else if (Model.LangCode == "en")
                {
                    <div class="ir-title-links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <img src="~/assets/img/ir.svg" alt="svg">
                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                    </div>
                    <div class="ir-title-text">
                        <p>Contact</p>
                    </div>
                }
                else
                {
                    <div class="ir-title-links">
                        <a asp-controller="Home" asp-action="Index">Главная</a>
                        <img src="~/assets/img/ir.svg" alt="svg">
                        <a asp-controller="Contact" asp-action="Index">Контакт</a>
                    </div>
                    <div class="ir-title-text">
                        <p>Контакт</p>
                    </div>
                }
                
            </div>
        </div>
    </section>

    <section id="contact-fab">
        <div class="container">
            <div class="contact-fab-flex">
                <div class="contact-fab-info">
                    <div class="cf-number">
                        <div class="numb_icon">
                            <img src="~/assets/img/phone.svg" alt="phone_icon">
                        </div>
                        <div class="cf-numbers-texts">
                            <p>@Model.Informations.Tel1</p>
                            <p>@Model.Informations.Tel2 </p>
                            <p>@Model.Informations.Tel3 </p>
                        </div>
                    </div>
                    <div class="cf-e_mail">
                        <div class="mail_icon">
                            <img src="~/assets/img/letter.svg" alt="phone_icon">
                        </div>
                        <div class="cf-email-text">
                            <a href="#">@Model.Informations.Email</a>
                        </div>
                    </div>
                    <div class="cf-address">
                        <div class="address_icon">
                            <img src="~/assets/img/location.svg" alt="phone_icon">
                        </div>
                        <div class="cf-address-text">
                            <p>@Model.Informations.Location</p>
                        </div>
                    </div>
                    <div class="cf-social_media">
                        <a href="@Model.Informations.SocialLink1"><img src="~/assets/img/socialmedia/fb.png" alt="sm-img"></a>
                        <a href="@Model.Informations.SocialLink2"><img src="~/assets/img/socialmedia/instagram.png" alt="sm-img"></a>
                        <a href="@Model.Informations.SocialLink3"><img src="~/assets/img/socialmedia/youtube.png" alt="sm-img"></a>
                        <a href="@Model.Informations.SocialLink4"><img src="~/assets/img/socialmedia/in.png" alt="sm-img"></a>
                    </div>
                </div>
                <div class="contact-fab-form">
                    <form method="post" asp-action="SendMessage" asp-controller="Contact" onsubmit="return submitForm();">
                        @if (Model.LangCode == "az")
                        {
                            <div class="form-field">
                                <input required id="Fullname" name="Fullname" type="text" placeholder="Ad Soyad" >
                            </div>
                            <div class="form-field">
                                <input required id="Email" name="Email" type="email" placeholder="E mail">
                            </div>
                            <div class="form-field">
                                <textarea required id="Message" name="Message" placeholder="Mesaj"></textarea>
                            </div>
                            <div class="sendbutton">
                                <button type="submit">Göndər</button>
                            </div>
                        }
                        else if (Model.LangCode == "en")
                        {
                            <div class="form-field">
                                <input required type="text" placeholder="Full Name" id="Fullname" name="Fullname">
                            </div>
                            <div class="form-field">
                                <input required type="email" placeholder="E mail" id="Email" name="Email">
                            </div>
                            <div class="form-field">
                                <textarea required id="Message" name="Message"  placeholder="Message" ></textarea>
                            </div>
                            <div class="sendbutton">
                                <button type="submit">Send</button>
                            </div>
                        }
                        else
                        {
                            <div class="form-field">
                                <input required type="text" placeholder="Имя и фамилия" id="Fullname" name="Fullname">
                            </div>
                            <div class="form-field">
                                <input required type="email" placeholder="Электронная почта" id="Email" name="Email">
                            </div>
                            <div class="form-field">
                                <textarea required placeholder="Сообщение" id="Message" name="Message"></textarea>
                            </div>
                            <div class="sendbutton">
                                <button type="submit">Отправить</button>
                            </div>
                        }
                        
                    </form>

                </div>
            </div>
        </div>
    </section>

    <section class="google-map">
        <div class="container">
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe id="gmap_canvas" style="width: 100%; height: 100%;"
                            src="@Model.Informations.LocationLink"
                            frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                    </iframe>
                    <br>
                </div>
            </div>

        </div>
    </section>
</main>



